@model List<ContractMonthlyClaimSystem.Models.LecturerModel>

<h2>Review Claims</h2>

<table class="table-custom">
    <thead>
        <tr>
            <th>Lecturer Name</th>
            <th>Hourly Rate</th>
            <th>Hours Worked</th>
            <th>Additional Notes</th>
            <th>Upload File Name</th>
            <th>Approved</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.LecturerName</td>
                <td>@claim.LecturerHourlyRate</td>
                <td>@claim.LecturerHoursWorked</td>
                <td>@claim.LecturerAdditionalNotes</td>
                <td>@claim.LecturerUploadFileName</td>
                <td>@claim.ReviewedClaimStatus</td>
                <td>
                    <form asp-action="ReviewClaims" method="post">
                        <input type="hidden" name="claimId" value="@claim.LecturerClaimID" />
                        <input type="password" name="password" placeholder="Enter password" required />
                        <select name="approve">
                            <option value="true">Approve</option>
                            <option value="false">Reject</option>
                        </select>
                        <button type="submit">Submit</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<br />
<br />

<div id="BacktoHomeBtnLayout">
    <!-- currently routing the login button to the reviewClaim from AdminViewClaims, login to be implemented later-->
    <a href="@Url.Action("AdminMenu", "Home")" class="btnAdmin">Back-To-Menu</a>
</div>